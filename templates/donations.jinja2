{% extends 'base.jinja2' %}

{% block subtitle %}{% endblock subtitle %}

{% block content %}
    <h1>Add New Donation</h1>
    <form method="POST">
        {% if error %}<p>{{ error }}</p>{% endif %}
        <label for="name-input">Donor Name: </label>
        <input type="text" id="name-input" name="donor_name">
        <label for="amount-input">Donation Amount: </label>
        <input type="number" id="amount-input" name="donation_amount">
        <input type="submit" value="Submit Donation">
    </form>

    <h1>Donation Totals</h1>
    <ul>
        {% for donation in donations %}
            <li><b>{{ donation.donor.name }}</b>: {{ donation.value }}</li>
        {% endfor %}
    </ul>
{% endblock content %}
